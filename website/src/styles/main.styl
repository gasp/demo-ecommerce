body
  margin 0
  padding 0

@import url("http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,700italic,300,400,700")
  body
    font-family: 'Open Sans', sans-serif;

@media all and (min-width: 960px)
  .flex
    display flex
    flex-direction row
    justify-content flex-start
    align-items flex-start
  nav
    min-width 250px

  main
    flex-grow 1

.header
  background rgb(3,42,104)
  background linear-gradient(90deg, rgba(3,42,104,1) 0%, rgba(117,201,200,1) 100%)
  padding 1em

  color white

  .logo
    float left
    width 242px
    height 242px
    img
      width 121px

  .title
    font-size 1.5rem
    font-family Rockwell
    font-weight bold

  .subtitle
    font-size 1rem
    font-weight 550


nav
  padding 1rem 0
  ul
    padding-bottom 1rem
    list-style: none
    &.pages
      border-bottom 1px solid #ccc
    li
      line-height 1.7rem
      &.active
        font-weight bold
      .date
        display none

main
  margin-left 1rem
  margin-right 1rem
  .content
    max-width 50rem
    padding-top 2rem
    color #333


footer
  margin-top 2rem
  padding 2ex 1em
  border-top 1px solid #ccc
  background #f2f2f2

  ol, ol li
    padding-left 0
    margin-left 1ex
    max-width 30rem
a
  color #0b80ef

img
  max-width 100vw

h1, h2
  font-weight normal
  font-family Rockwell

h1
  font-weight bold
  font-size 26px

sup
  font-size .5em

.update
  margin-top 2em
  text-align right
  font-family monospace
  font-size .8em

.cite-backlink
  a
    font-family sans-serif
    font-size .8em
    text-decoration none
    background none
